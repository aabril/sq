.info
  text-align center
  padding: 40px 0 0 0
  h1
    font-family "Raleway"
    span
      display:block;
      font-size 0.4em
      // text-align: right;

.info_text
  background #EBF7F8
  margin 2px 0 40px 0
  border 1px solid #9FA0FF
  border-radius 12px
  height auto
  padding 10px 10px 10px 10px
  p
    margin-bottom 2px

.templates
  text-align left
  padding 0 0 0 0
  margin 0 0 0 0
  .row
    line-height 0.5%
    margin-bottom 1%

    .img_container
        width 32%
        height 100%
        float left
        overflow hidden
        margin 0 0.5% 0% 0
        background black
        cursor pointer

        @media (max-width: 760px)
          width 100%
          margin-bottom 8px;

        .img_html
          position absolute
          // top 0
          margin-top 10px
          color white
          z-index 1
          padding 2%
          opacity 0
          font-family 'Raleway'
          font-size 1em
          @media (max-width: 760px)
            font-size 2em
            height 30px
            line-height 1

        img
          width 100%
          height 100%

          grayscale_level = 0.7

          -webkit-filter grayscale(grayscale_level)
          -moz-filter grayscale(grayscale_level)
          -o-filter grayscale(grayscale_level)
          -ms-filter grayscale(grayscale_level)

          -webkit-transition: all 0.6s ease;
          -moz-transition: all 0.6s ease;
          -o-transition: all 0.6s ease;
          -ms-transition: all 0.6s ease;
          transition: all 0.6s ease;


        &:hover > img

          filter grayscale(0)
          -webkit-filter grayscale(0)
          -moz-filter grayscale(0)
          -o-filter grayscale(0)
          -ms-filter grayscale(0)
          //
          // filter blur(1px)
          // -webkit-filter blur(1px)
          // -moz-filter blur(1px)
          // -o-filter blur(1px)
          // -ms-filter blur(1px)

          margin-left +4%
          // width 106%
          position inherit
          overflow-y hidden

        &:hover > .img_html
          -webkit-transition: all 1s ease;
          -moz-transition: all 1s ease;
          -o-transition: all 1s ease;
          -ms-transition: all 1s ease;
          transition: all 1s ease;
          opacity 1
          margin-left +1%
          background black
