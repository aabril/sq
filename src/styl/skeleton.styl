google_font = "Indie Flower"

// Didact+Gothic
@import url("http://fonts.googleapis.com/css?family="+google_font);
base_font_family = google_font, "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif

@import "skeleton/01.grid.styl"
@import "skeleton/02.base.styl"
@import "skeleton/03.typography.styl"
@import "skeleton/04.links.styl"
@import "skeleton/05.buttons.styl"
@import "skeleton/06.forms.styl"
@import "skeleton/07.lists.styl"
@import "skeleton/08.code.styl"
@import "skeleton/09.tables.styl"
